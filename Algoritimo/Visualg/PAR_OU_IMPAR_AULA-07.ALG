algoritmo "par_ou_impar_Aula-07"

   var

      num1: inteiro

   inicio

         escreva("Digite um numero: ")
         leia(num1)

         se (num1 % 2 = 0) entao
            escreva("O numero", num1, " é par!")

         senao
              escreva("O numero ", num1, " é impar!")
              
         fimse
fimalgoritmo